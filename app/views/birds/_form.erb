<form action=<%= bird.new_record? ? '/birds' : "/birds/#{bird.id}" %> method='post'>
  <% unless bird.new_record? %>
    <input type='hidden' name='_method' value='put'>
  <% end %>
  <ol>
    <li>
      <label for='bird[name]'>Name: </label>
      <input type='text' name='bird[name]' value=<%="#{bird.name}"%> >
    </li>
    <li>
      <label for='bird[email]'>Email: </label>
      <input type='email' name='bird[email]' value=<%="#{bird.email}"%> >
    </li>
    <li>
      <input type='submit' value='Save Bird' />
    </li>
  </ol>
</form>